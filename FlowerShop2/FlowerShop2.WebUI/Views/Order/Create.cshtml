@model FlowerShop2.WebUI.Models.PlaceOrderViewModel

@{
    ViewData["Title"] = "CreateOrderItem";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<h1>Add an Item</h1>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["QuantityError"].Errors.Count > 0)
{
    <div class="my-alert">
        <strong>Error!</strong> @ViewData.ModelState["QuantityError"].Errors.First().ErrorMessage
    </div>
}
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CustomerId" class="control-label">Customer Username</label>
                <select asp-for="@Model.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StoreId" class="control-label">Store Location</label>
                <select asp-for="@Model.StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
      

            <div class="form-group">
                <input type="submit" value="Start Order" class="btn btn-primary" />
            </div>
        
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}