@model IEnumerable<FlowerShop2.Domain.Model.OrderLine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.InventoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.SaleId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderLineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderLineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderLineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
